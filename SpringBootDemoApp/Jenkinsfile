pipeline {
    agent any
    tools { 
        def mvnHome = tool name: 'Maven 3.86', type: 'maven'
        def jdkHome = tool name: 'jdk11', type: 'jdk'
    }
    stages {
        stage ('Initialize') {
            steps {
                bat '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                ''' 
            }
        }

        stage ('Build') {
            steps {
                echo 'This is a minimal pipeline.'
            }
        }
    }
}
